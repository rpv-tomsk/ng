# универсальная работа с конфигом
# как метод CMS NG::Application : $cms->confParam($param,$default)
# как метод CMS NG::Application : NG::Application->confParam($param,$default)
# При наличии в $param точки, левая часть становится именем секции,
# правая - именем параметра
#[param]

# Вызов как метод модуля: NG::Module->confParam($param,$default)
#[MODULE_%MODULECODE%]
#param=value

# Вызов как метод любого другого класса NG::SomeModule->confParam('group',$param,$default)
# значение из группы -  NG::SomeModule->confParam('GROUP','option','default');
# значение без группы - NG::SomeModule->confParam(null,'option','default');
#[NG::SomeModule_GROUP]
#Param=value


#Параметры блоков:  - Запрашиваются явно через $cms->confParam("BLOCK_$blockCode.$param")
[BLOCK_%BLOCKCODE%]
LAYOUT_%LANG% = "templates/public/layout.tmpl"            #Путь к шаблону layout
LAYOUT_S%SUBSITEID% = "templates/public/layout.tmpl"      #параметры приведены
LAYOUT = "templates/public/layout.tmpl"                   #в порядке приоритета
PRINTLAYOUT_%LANG% = "templates/public/layout.tmpl"       #проверки. Перекрывают
PRINTLAYOUT_S%SUBSITEID% = "templates/public/layout.tmpl" #значение, возвращаемое
PRINTLAYOUT = "templates/public/layout.tmpl"              #модулем

----------------

Используемые в CMS параметры

[CMS]
hasSubsites = [0|1]  (0)
hasLanguages = [0|1] (0)
SiteName    = "Имя сайта" ("Сайт")
DefaultPageClass = "Site::PageModule" ("NG::PageModule")

LAYOUT_%LANG% = "templates/public/layout.tmpl"            #Путь к шаблону layout
LAYOUT_S%SUBSITEID% = "templates/public/layout.tmpl"      #параметры приведены
LAYOUT = "templates/public/layout.tmpl"                   #в порядке приоритета
PRINTLAYOUT_%LANG% = "templates/public/layout.tmpl"       #проверки. Используются
PRINTLAYOUT_S%SUBSITEID% = "templates/public/layout.tmpl" #при отсутствии значения,
PRINTLAYOUT = "templates/public/layout.tmpl"              #возвращенного модулем


[Admin-side]
SiteStructModule = "MODULECODE" ("")     #Код модуля работы со структурой сайта
SiteAccessModule = "MODULECODE" ("")     #Код модуля проверки привилегий
SiteAuthClass = NG::Adminside::Auth

[NG::Field_types]
type_class = "Site::Field::Type"
type_processor = "Site::TypeProcessor"

[Resource]
{MODULECODE}_P{page_id}     = "Site::Module::Resource"      # Поддержка т.н. ресурсов, т.е. значений,
{MODULECODE}_LI{link_id}    = "Site::Module::Resource"      # которые зависят от использования модуля.
{MODULECODE}_S{subsite_id}  = "Site::Module::Resource"      # $cms->getResource($VARNAME)
{MODULECODE}_L{lang_id}     = "Site::Module::Resource"      # $mObj->getResource($VARNAME)
{MODULECODE}                = "Site::Module::Resource"      # Либо в шаблоне через переменную RESOURCE (RESOURCE.VARNAME)
CMS_S{subsite_id}           = "Site::Module::Resource"
CMS_L{lang_id}              = "Site::Module::Resource"      # Модуль Site::Module::Resource представляет собой некий класс
CMS                         = "Site::Module::Resource"      # поддержкой метода getResource($VARNAME,$keys).
                                                            # $keys - хэш со значениями ключей в фигурных скобках

